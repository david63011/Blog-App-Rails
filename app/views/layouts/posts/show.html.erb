<section class= 'one post'>
<section class= 'post body'>
<h2><%= @post.title %> by <%= @post.author.name %></h2>
 <div class= 'post counters'>
    <p>
        <%= @post.likes_counter %> likes
    </p>
    <p>
        <%= @post.comments_counter%> comments
    </p>
</div>
<p>
    <%= @post.text%>
</p>
<ul class= 'comments section'>
    <h3>Comments</h3>
    <ul>
        <% @post.comments.each do |comment| %>
        <li>
            <p>
                 <%= comment.author.name %>
                <%= comment.text %>
            </p>
        </li>
        <% end %>
    </ul>
</section>
</section>

