<section class= 'main'>
 <ul class = 'user-container'>
    <% @users.each do |user| %>
      <li class = 'user'>
         <div class = 'user-photo'>
            <img class= 'index-photo' src = '<%= user.photo %>' alt = "<%= user.name %>'s profile picture"/>
         </div>
         <div class = 'user-info'>
            <h2><%= link_to user.name, user_path(user) %></h2>
            <p>
              Number of posts: <%= user.posts.count %>
            </p>
         </div>
      </li>

    <% end %>
</ul>


</section>